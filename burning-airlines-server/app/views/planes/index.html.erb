<h1>All Planes</h1>
<ul>
  <% @planes.each do |plane| %>
    <li>
      <%= plane.name %> (<%= plane.columns %> x <%= plane.rows %>)
    </li>
  <% end %>
</ul>

<h3>Create a Plane</h3>
<%= form_for @plane do |f|%>
  <strong> Name: </strong><%= f.text_field :name %><br>
  <strong> Rows: </strong><%= f.text_field :rows %><br>
  <strong> Columns: </strong><%= f.text_field :columns %><br>
  <%= f.submit %>
<% end %>
